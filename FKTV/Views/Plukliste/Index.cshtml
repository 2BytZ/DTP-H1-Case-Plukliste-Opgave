@model FKTV.Models.Plukliste.Plukliste

@{
    ViewData["Title"] = "Index";
    var initialItemCount = Model?.Lines?.Count ?? 0;
}

<h1>Lav en plukseddel til tilføjelse af Pluklisten</h1>

<h4>Plukseddel oprettelse</h4>
<hr />
<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forsendelse" class="control-label"></label>
                <select name="Forsendelse" class="form-control-select">
                    <option value="PostNord">PostNord</option>
                    <option value="GLS">GLS</option>
                    <option value="Bring">Bring</option>
                    <option value="DAO">DAO</option>
                    <option value="Pickup">Pickup</option>
                </select>
                <span asp-validation-for="Forsendelse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresse" class="control-label"></label>
                <input asp-for="Adresse" class="form-control" />
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-8">
            <h5>Items</h5>
            <div id="items">
                @if (Model?.Lines != null && Model.Lines.Count > 0)
                {
                    for (int i = 0; i < Model.Lines.Count; i++)
                    {
                        <div class="item-row mb-2">
                            <div class="row">
                                <div class="col-md-3">
                                    <input name="Lines[@i].ProductID" class="form-control" placeholder="ProductID" value="@Model.Lines[i].ProductID" />
                                </div>
                                <div class="col-md-4">
                                    <input name="Lines[@i].Title" class="form-control" placeholder="Title" value="@Model.Lines[i].Title" />
                                </div>
                                <div class="col-md-2">
                                    <select name="Lines[@i].Type" class="form-control-select">
                                        <option value="Fysisk">Fysisk</option>
                                        <option value="Print">Print</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input name="Lines[@i].Amount" type="number" min="0" class="form-control" placeholder="Amount" value="@Model.Lines[i].Amount" />
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-danger" onclick="removeItem(this)">−</button>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="mt-2">
                <input type="button" value="Add Item" class="btn btn-secondary" onclick="addItem()" />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Pluksedler">Go to Pluksedler</a>
</div>

<!-- Hidden template: uses __index__ placeholder which JS replaces with the next index -->
<div id="item-template" style="display:none">
    <div class="item-row mb-2">
        <div class="row">
            <div class="col-md-3">
                <input name="Lines[__index__].ProductID" class="form-control" placeholder="ProductID" />
            </div>
            <div class="col-md-4">
                <input name="Lines[__index__].Title" class="form-control" placeholder="Title" />
            </div>
            <div class="col-md-2">
                <select name="Lines[__index__].Type" class="form-control-select">
                    <option value="Fysisk">Fysisk</option>
                    <option value="Print">Print</option>
                </select>
            </div>
            <div class="col-md-2">
                <input name="Lines[__index__].Amount" type="number" min="0" class="form-control" placeholder="Amount" />
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-danger" onclick="removeItem(this)">−</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            let itemIndex = @initialItemCount;

            window.addItem = function () {
                const tpl = document.getElementById('item-template').innerHTML;
                const html = tpl.replace(/__index__/g, itemIndex);
                document.getElementById('items').insertAdjacentHTML('beforeend', html);
                itemIndex++;
            };

            window.removeItem = function (btn) {
                const row = btn.closest('.item-row');
                if (row) row.remove();
                // Note: this does not re-index names; model binding will skip missing indexes.
            };
        })();
    </script>
}
